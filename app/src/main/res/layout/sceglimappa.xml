<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_secondary_variant"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:title="Scelta Mappa"
        app:titleTextColor="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>


    <ImageButton
        android:id="@+id/simpleImageButton"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/border"
        android:onClick="immaginescelta1"
        android:src="@drawable/mappa1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:onClick="immaginescelta2"
        android:src="@drawable/mappa2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="immaginescelta3"
                android:src="@drawable/mappa3" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:onClick="immaginescelta4"
                android:src="@drawable/mappa6" />

</LinearLayout>
</ScrollView>