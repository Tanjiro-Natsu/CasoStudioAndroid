<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_secondary_variant"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:title="Scelta Immagine"
        app:titleTextColor="@color/white" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:stretchColumns="*">



        <TableRow
            android:id="@+id/row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TableRow
            android:id="@+id/row1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/simpleImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="immaginescelta1"
                android:src="@drawable/cane" />

            <ImageButton
                android:id="@+id/simpleImageButton1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/albero"
                android:onClick="immaginescelta2"/>

        </TableRow>
        <TableRow
            android:id="@+id/row2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/simpleImageButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/casa"
                android:onClick="immaginescelta3"/>

            <ImageButton
                android:id="@+id/simpleImageButton3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/coniglio"
                android:onClick="immaginescelta4"/>
        </TableRow>



    </TableLayout>
</LinearLayout>